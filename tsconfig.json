{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",


    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
