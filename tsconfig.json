{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "es2022",
        "lib": [
            "es2022"
        ],
        "module": "commonjs",
        "resolveJsonModule": true,
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "skipLibCheck": true,
        "declaration": true,
        "moduleResolution": "node",
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
